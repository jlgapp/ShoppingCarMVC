@model IEnumerable<ShoppingCar.Modelos.Producto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container p-3">
	<div class="row pt-3">
		<div class="col-6">
			<h2 class="text-primary">Lista de Productos</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Producto" asp-action="Upsert" class="btn btn-primary">
				<i class="fa-solid fa-plus"></i>
				Nuevo Producto</a>
		</div>
	</div>
	<br />
	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width:100%">
			<thead>
				<tr>
					<th>Nombre</th>
					<th>Precio</th>
					<th>Categoria</th>
					<th>Tipo</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.NombreProducto</td>
						<td>@item.Precio</td>
						<td>@item.Categoria.NombreCategoria</td>
						<td>@item.TipoAplicacion.Nombre</td>


						<td width="10%" class="text-center">
							<div class="w-75 btn-group" role="group">
								<a asp-controller="Producto" asp-action="Upsert" asp-route-Id="@item.Id" class="btn btn-primary mx-2">
									<i class="fa-solid fa-pen-to-square"></i>
									</a>
								<a asp-controller="Producto" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-danger mx-2">
									<i class="fa-solid fa-trash-can"></i>
									</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>No hay registros</p>
	}
</div>



