@model IEnumerable<ShoppingCar.Models.TipoAplicacion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">Lista de Tipo Aplicaciones</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="TipoAplicacion" asp-action="Crear" class="btn btn-primary">Nuevo Tipo Aplicacion</a>
        </div>
    </div>
    <br />
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="50%">@item.Nombre</td>
                        <td width="50%" class="text-center">
							<div class="w-75 btn-group" role="group">
								<a asp-controller="TipoAplicacion" asp-action="Editar" asp-route-Id="@item.Id" class="btn btn-primary mx-2">
									<i class="fa-solid fa-pen-to-square"></i>
									</a>
								<a asp-controller="TipoAplicacion" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-danger mx-2">
									<i class="fa-solid fa-trash-can"></i>
									</a>
							</div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }else{
        <p>No hay registros de categoria</p>
    }
</div>