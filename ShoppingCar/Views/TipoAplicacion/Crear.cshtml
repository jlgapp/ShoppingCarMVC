@model ShoppingCar.Modelos.TipoAplicacion

@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Crear">
    <div class="border p-3">

        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>

        <div class="form-group row">
            <h2 class="text-info pl-3">Nuevo Tipo Aplicacion</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <label asp-for="Nombre" class="form-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control"/>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            
            <br />

            <div class = "d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-primary">Crear Nueva</button>
                <a asp-controller="TipoAplicacion" asp-action="Index" class="btn btn-success">Regresar</a>
            </div>

        </div>
    </div>
</form>

@section Scripts {
    @{ <partial name ="_ValidationScriptsPartial" />}
}